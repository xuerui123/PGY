/* pages/third/third.wxss */
page{
  background: #efefef
}
.container{
  width: 100%;
  overflow: hidden;
}
.top{
  margin-top: 50rpx;
  color: #5a5a5a;
  display: flex;
  flex-direction: column;
}
.top view{
  display: flex;
  flex: 1;
  justify-content: center
}
.img{
  margin: 50rpx 0;
  width: 400rpx;
  height: 400rpx;
  /* background: #fff; */
  border-radius: 50%;
}
.img image{  
  width: 400rpx;
  height: 400rpx;  
}
.msg>view{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
}
.msg .iocn image{
  width: 70rpx;
  height: 70rpx;
}
.msg .text{
  height: 70rpx;
  color: #a8a8a8;
}

.bottom{
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bottom view{
  display: flex;
  margin-top: 10rpx;
  justify-content: center;
  color: #858c96;
  font-size: 32rpx;
}
.audio-box { opacity: 0; position: absolute; z-index: -999; left: -9999rpx;}