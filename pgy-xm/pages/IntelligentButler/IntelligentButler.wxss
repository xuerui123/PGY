/* pages/ZZGJ/ZZGJ.wxss */
page{
  background: #efefef;
}
.room{
  display: flex;
  width: 100%;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 0;
  align-items: center;
  margin-bottom: 40rpx;
}
.room .text{
  display: flex;
  margin-left: 5%;
}
.room .iocn{
  display: flex;
  width: 80rpx;
  height: 50rpx;  
  margin-right: 5%;
  background: url(http://192.168.3.11:3400/img/set.svg) no-repeat center;
  background-size: auto 100% ;
}
.list{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #fff;
  justify-content: center;
}
.list .item{
  display: flex;
  width: 100%;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;  
}
.list .item .Ltext{
  display: flex;
  margin-left: 5%;
}
.list .item .iocn{
  display: flex;
  width: 40rpx;
  height: 40rpx;
  background: url(http://192.168.3.11:3400/img/right.svg) no-repeat center;
  background-size: auto 420%;
  margin-right: 5%;
}
.list .item .Rtext{
  display: flex;
  margin-right: 5%;
}
.btnList{
  display: flex;
  width: 100%;
  flex-direction: column;
}
.btnList  .btnBox{
  display: flex;
  width: 100%;
  margin-top: 100rpx;
  flex-direction: row;
  justify-content: space-between;
}
.btnList  .btnBox .btn{
  display: flex;
  flex: 1;
  justify-content: center;    
}
.btnList  .btnBox .btn view{
  display: flex;
  background: #fff;
  width: 130rpx;
  height: 130rpx;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}
.btnList  .btnBox .btn view.active{  
  background: #3de4ff;  
}
action-sheet-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin-left: 5%;
  padding: 30rpx 0;
}
action-sheet-item .more{
  width: 40rpx;
  height: 40rpx;
  background: url(http://192.168.3.11:3400/img/right.svg) no-repeat center;
  background-size: 580% auto;
}
.HostName{
  border-bottom: 1px solid #666;
  font-size: 36rpx;
  padding: 10rpx 0;
  padding-left: 10rpx;
  margin-bottom: 30rpx;
}
.showBG{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.listpicker{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  background: #eee;
  z-index: 100;
}
.listheader{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  border-top: 1px solid #eee;
  border-bottom:1px solid #eee;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  padding: 20rpx 0;
}
.list-true{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-hide{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-title{ 
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  flex: 3; 
}
.sensitive{
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}