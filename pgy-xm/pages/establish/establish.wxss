/* pages/establish/establish.wxss */

page {
  background: #efefef;
}
.container{
  margin-bottom: 120rpx;
}
.top {
  display: flex;
  justify-content: center;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.top .topBox {
  display: flex;
  flex-direction: row;
  width: 90%;
  justify-content: center;
}

.top .text {
  display: flex;
  flex: 1;
  padding: 30rpx 0;
  color: #3f3f3f;
}

.top .name {
  display: flex;
  flex: 4;
}

.top .name input {
  padding: 30rpx 0;
  width: 100%;
}

.time {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #fff;
  padding-bottom: 30rpx;
}

.time .title {
  display: flex;
  color: #3f3f3f;
  width: 90%;
  padding: 20rpx 0;
  margin-left: 5%;
}

.time .timeBox {
  display: flex;
  width: 90%;
  margin-left: 5%;
  border: 1px solid #1fb4fb;
  padding: 30rpx 0;
  justify-content: space-between;
  border-radius: 20rpx;
}

.time .timeBox view {
  display: flex;
  flex: 1;
  justify-content: center;
}

.condition, .just {
  display: flex;
  justify-content: flex-start;
  width: 90%;
  color: #9f9f9f;
  padding: 15rpx 0;
}
.condition1 {
  display: flex;
  flex-direction: row;
  width: 100%;
  background: #fff;
  justify-content: center;
  margin-bottom: 10rpx;
}

.condition1 .box {
  display: flex;
  flex-direction: row;
  width: 90%;
  justify-content: space-between;
  padding: 30rpx 0;
}

.condition1 .box view {
  display: flex;
  justify-content: center;
  width: 47%;
  padding: 20rpx 0;
  border: 1px solid #9b9fac;
  border-radius: 10rpx;
  color: #9b9fac;
}

.condition1 .box view.active {
  color: #1fb4fb;
  border: 1px solid #1fb4fb;
}

.chose {
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  font-size: 34rpx;
  background: #fff;
  padding: 20rpx 0;
}

.choseBox {
  display: flex;
  justify-content: center;
  width: 90%;
  margin-left: 5%;
  padding: 30rpx 0;
  border: 1px solid #1fb4fb;
  border-radius: 20rpx;
  color: #1fb4fb;
}
.choseBox2 {
  display: flex;
  justify-content: center;
  width: 90%;
  margin-left: 5%;
  padding: 30rpx 0;
  border: 1px solid #999;
  border-radius: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.btnlist{
  display: flex;
  width: 100%;
  margin-top: 50rpx;
  justify-content: center;
}
.btnlist .btn{    
  display: flex;
  width: 100%;
  justify-content: center;
  
}
.btnlist .btn text{
  width: 80%;
  text-align: center;
  background: #fff;
  padding: 30rpx 0;
  color: #1FB4FB;
  border-radius: 10rpx;
}
.show {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 100;
}

.huise {
  display: flex;
  position: fixed;
  bottom: 0;
  background: #eee;
  height: 400rpx;
  width: 100%;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.huise .list1 {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.huise .list1 view {
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 120rpx;
  line-height: 60rpx;
  background: #fff;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  border-radius: 50%;
  font-size: 40rpx;
}

.huise .list1 .middle {
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.huise .list2 {
  display: flex;
  width: 100%;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}

.huise .list2 view {
  display: flex;
  width: 175rpx;
  height: 175rpx;
  justify-content: center;
  align-items: center;
}

.huise .list2 text {
  /* font-size: 38rpx; */
  display: flex;
  width: 90rpx;
  height: 90rpx;
  background: #fff;
  align-items: center;
  text-align: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 50%;
}
