/* pages/KG/KG.wxss */
page{
  background: #efefef;
}
.room{
  display: flex;
  width: 100%;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 0;
  align-items: center;
  
}
.room .text{
  display: flex;
  margin-left: 5%;
}
.room .iocn{
  display: flex;
  width: 80rpx;
  height: 50rpx;  
  margin-right: 5%;
  background: url(http://192.168.1.215:3400/img/set.svg) no-repeat center;
  background-size: auto 100% ;
}
.list{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}
.list .item{
  display: flex;
  flex: 1;
  justify-content: center;
}
.itemBox{
  display: flex;
  flex-direction: column;
  width: 130rpx;
  margin-top: 40rpx;
  justify-content: center;
}
.list .item .up{
  margin-top: 20rpx;
}
.list .item view{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.list .item .iocn{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 50%;
}
.list .item .text{
  display: flex;
  flex-direction: column;
  height: 400rpx;
}
.list .item .iocn image{
  width: 50rpx;
  height: 50rpx;
}
.list .item .btn{
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 50%;
  height: 130rpx;
}
.list .item .btn.active{
  background: #3de4ff;
}
.deng{
  width: 130rpx;
  height: 130rpx;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}
.deng image{
  width: 130rpx;
  height: 130rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  background: #fff;
  width: 100%;
  padding: 30rpx 0;
  z-index: 10;
  color: #3de4ff;
}
action-sheet-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin-left: 5%;
  padding: 30rpx 0;
}
action-sheet-item .more{
  width: 40rpx;
  height: 40rpx;
  background: url(http://192.168.1.215:3400/img/right.svg) no-repeat center;
  background-size: 580% auto;
}

.showBG{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.listpicker{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  background: #eee;
  z-index: 100;
}
.listheader{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  border-top: 1px solid #eee;
  border-bottom:1px solid #eee;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  padding: 20rpx 0;
}
.list-true{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-hide{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-title{ 
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  flex: 3;
  
}