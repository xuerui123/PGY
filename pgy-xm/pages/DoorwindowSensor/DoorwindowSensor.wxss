/* pages/MCCGQ/MCCGQ.wxss */
page{
  background: #efefef;
}
.room{
  display: flex;
  width: 100%;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 0;
  align-items: center;  
}
.room .text{
  display: flex;
  margin-left: 5%;
}
.room .iocn{
  display: flex;
  width: 80rpx;
  height: 50rpx;  
  margin-right: 5%;
  background: url(http://192.168.3.11:3400/img/set.svg) no-repeat center;
  background-size: auto 100% ;
}

.list {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 120rpx;
}
.list .item{
  display: flex;
  width: 90%;
  margin-left: 5%;
  padding: 20rpx 0;
  align-items: center;
  
}
.list .item .title{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: flex-end;
}

.list .item .big{
  position: absolute;  
  width: 20rpx;
  height: 20rpx;
  background: #999;
  border-radius: 50%;
  left: 30rpx;
  
}
.list .item .big.active{
  width: 30rpx;
  height: 30rpx;
  left: 25rpx;
  background: #3de4ff;
  
}
.list .item .text{
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #999;
}
.list .item .text.active{
  color: #3de4ff;
  
}
.list .item .timer{
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #999;
  width: 150rpx;
}
.list .item .timer.active{
  color: #3de4ff;
}
.list .item .date{
  font-size: 28rpx;
  color: #999;
}

.btn{
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  justify-content: center;
  padding: 30rpx 0;
}
action-sheet-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin-left: 5%;
  padding: 30rpx 0;
}
action-sheet-item .more{
  width: 40rpx;
  height: 40rpx;
  background: url(http://192.168.3.11:3400/img/right.svg) no-repeat center;
  background-size: 580% auto;
}
.showBG{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.listpicker{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  background: #eee;
  z-index: 100;
}
.listheader{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  border-top: 1px solid #eee;
  border-bottom:1px solid #eee;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  padding: 20rpx 0;
}
.list-true{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-hide{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-title{ 
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  flex: 3; 
}