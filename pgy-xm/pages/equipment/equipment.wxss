/* pages/equipment/equipment.wxss */

page {
  background: #eee;
}

.navList {  
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  white-space: nowrap;
  display: block;
  width: 95%;  
  border-radius:8rpx;   
  
}
.nav{
  display: flex;
  
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navBox {    
  display: flex;
  flex: 1;
  justify-content: center;
  padding: 20rpx 24rpx;
  color: #898787;
  font-size: 32rpx;
  border-bottom: 1px solid #898787;
}
.navBox.active {      
  color: #000;
  border-bottom: 2px solid #3de4ff;
}
.title{
  display: flex;
  width: 90%;
  flex-direction: column;
  position: relative;
}
.title>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title .welcome{  
  font-size: 50rpx;
}
.title .text{
  font-size: 30rpx;
  color: #898787;
}
 .title .add view {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  width: 70rpx;
  height: 70rpx;
  background: url(http://192.168.1.215:3400/img/jiahaobai.svg) no-repeat center;
  background-size: auto 100%;
}

.default {
  display: flex;
  flex-direction: column;
  width: 95%;
}

.default .title {  
  margin-bottom: 20rpx;  
  width: 100%;
  color: #c9cacb;
  font-size: 28rpx;
}
.default .title text{
  padding-left: 5%;
}
.default .list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.default .list .item {
  display: flex;
  width: 237.5rpx;
  height: 237.5rpx;
  justify-content: center;
}

.default .list .item .box {
  display: flex;
  flex-direction: column;
  width: 205rpx;
  height: 205rpx;
  background: #fff;
  border-radius: 10rpx;
}

.default .list .item .box .img {
  position: relative;
}

.default .list .item .box .img .biaoqian {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: url(http://192.168.1.215:3400/img/biaoqian.svg) no-repeat center;
  background-size: 100% auto;
  top: 30rpx;
  right: 20rpx;
}

.default .list .item .box .img .rf {
  position: absolute;
  top: 70rpx;
  right: 20rpx;
  font-size: 24rpx;
}

.default .list .item image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.default .list .item .box .status {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #9b9fac;
  height: 36rpx;
}

.default .list .item .box .status.active {
  color: #3de4ff;
}

.default .list .item .box .name {
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #595757;
}

.showpg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 10;
}
