/* pages/second/second.wxss */
page{
  background: #efefef
}
.container{
  width: 100%;
  overflow: hidden;
}
.top{
  margin-top: 50rpx;
  color: #5a5a5a;
}
.img{
  margin: 50rpx 0;
  width: 400rpx;
  height: 400rpx;
  /* background: #fff; */
  border-radius: 50%;
}
.img image{
  width: 400rpx;
}
.operation{
  display: flex;
  flex-direction: column;  
}
.operation view{
  display: flex;
  flex: 1;
  justify-content: center;
}
.operation .start{
  background: #a7dcef;
  color: #fff;
  padding: 30rpx 50rpx;
  border-radius: 10rpx;
}
.operation .mistakes{
  margin-top: 50rpx;
  color:  #a7dcef;
}
.bottom{
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bottom view{
  display: flex;
  margin-top: 10rpx;
  justify-content: center;
  color: #858c96;
  font-size: 32rpx;
}
