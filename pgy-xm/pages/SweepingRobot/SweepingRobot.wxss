/* pages/SDJQR/SDJQR.wxss */
page {
  background: #efefef;
}

.room {
  display: flex;
  width: 100%;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 0;
  align-items: center;
}

.room .text {
  display: flex;
  margin-left: 5%;
}

.room .iocn {
  display: flex;
  width: 80rpx;
  height: 50rpx;  
  margin-right: 5%;
  background: url(http://192.168.1.215:3400/img/set.svg) no-repeat center;
  background-size: auto 100% ;
}
.study{
  display: flex;
  width: 100%;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 0;
  align-items: center;
  
}
.study view{  
  display: flex;
  width: 150rpx;
  justify-content: center;
}
.list{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 60rpx;
}
.list .ones{
  display: flex;
  margin-top: 50rpx;
  flex-direction: row;
  width: 90%;
  margin-left: 5%;
}
.list .ones>view{
  display: flex;
  flex: 1;
  justify-content: center;
}
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  background: #fff;
  border-radius: 50%;
}
.btn.active {
  background: #3de4ff;
}
.btn.studyBtn{
  color: #dddedf;
  border: 1px solid #fff;
}
.btn.finish{
  color: #000;
  border: 1px solid #fff;
}
.third{
  display: flex;
  margin-top: 100rpx;
  flex-direction: row;
  width: 90%;
  margin-left: 5%;
}
.third .yuan{
  display: flex;
}
.third .control{
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  text-align: center
}
.third .control view{
  display: flex;  
  justify-content: center;
  
}
.third .control view .jia{
  width: 110rpx;  
  height: 200rpx;
  padding: 0 10rpx;
  background: #fff;
  border-radius : 100rpx 100rpx 0 0;
}
.third .control view .jia.active {
  background: #3de4ff;
}
.third .control view .jia.studyBtn{
  color: #dddedf;
}
.third .control view .jia.finish{
  color: #000;
}
.third .control view .middle{
  width: 110rpx;  
  padding: 0 10rpx;
  background: #fff;
  border-radius : 0;
}
.third .control view .jian{
  width: 110rpx;  
  height: 200rpx;
  padding: 0 10rpx;
  background: #fff;
  border-radius : 0 0 100rpx 100rpx;
}
.third .control view .jian.active {
  background: #3de4ff;
}
.third .control view .jian.studyBtn{
  color: #dddedf;
}
.third .control view .jian.finish{
  color: #000;
}
.third .yuan{
  display: flex;
  flex: 2;
}
.third .yuan .box{
  display: flex;
  width: 400rpx;
  height: 400rpx;
  margin-left: 10%;
  flex-direction: column;
  background: #fff;
  border-radius: 50%;
}
.third .yuan .box .yuanbtn.active{
  background: #3de4ff;
}
.third .yuan .box .yuanbtn.studyBtn{
  color: #dddedf;
}
.third .yuan .box .yuanbtn.finish{
  color: #000;
}

.third .yuan .box .up{
  display: flex;
  height: 130rpx;
  justify-content: center;
  padding-top: 20rpx;
  font-weight: bold;
}
.third .yuan .box .up view{
  display: flex;
  width: 130rpx;
  justify-content: center;
}
.third .yuan .box .down view{
  display: flex;
  width: 130rpx;
  height: 130rpx;
  justify-content: center;
  align-items: flex-end;
}
.third .yuan .box .down{
  display: flex;
  height: 130rpx;
  justify-content: center;
  
  padding-bottom: 20rpx;
}
.third .yuan .box .middle{
  display: flex;
  height: 140rpx;
  justify-content: space-between;
  align-items: center;
}
.third .yuan .box .middle .left,.right{
  display: flex;
  width: 100rpx;
  height: 140rpx;  
  align-items: center;
}
.third .yuan .box .middle .confirm{
  display: flex;
  width: 130rpx;
  height: 130rpx;
  justify-content: center;
  align-items: center;
}
.third .yuan .box .middle .left{
  padding-left: 20rpx;
}
.third .yuan .box .middle .right{
  justify-content: flex-end;
  padding-right: 20rpx;
}
.third .yuan .box .middle .automatic{
  border-bottom: 2px solid #000;
}
action-sheet-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin-left: 5%;
  padding: 30rpx 0;
}
action-sheet-item .more{
  width: 40rpx;
  height: 40rpx;
  background: url(http://192.168.1.215:3400/img/right.svg) no-repeat center;
  background-size: 580% auto;
}
.showBG{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.listpicker{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  background: #eee;
  z-index: 100;
}
.listheader{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  border-top: 1px solid #eee;
  border-bottom:1px solid #eee;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  padding: 20rpx 0;
}
.list-true{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-hide{
  display: flex;
  font-size: 34rpx;
  justify-content: center;
  flex: 1;
}
.list-title{ 
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  flex: 3;
  
}