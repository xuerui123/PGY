<!--pages/myfamily/myfamily.wxml-->
<view class='container'>
  <view class='list'>
    <view class='item' wx:for='{{list}}' wx:key='index'>
      <view class='photo'>
        <image mode='widthFix' src='{{item.img}}'></image>
      </view>
      <view class='text'>{{item.name}}({{item.pr=='admin'?'管理员':'成员'}})</view>
      <view class='dele'>x</view>
    </view>
  </view>
</view>